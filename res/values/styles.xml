	<style name="MyProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_pulltorefresh</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">800</item>
        <item name="android:minWidth">20dip</item>
        <item name="android:maxWidth">20dip</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
    
	<style name="ProgressBar_head">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_large_holo</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">24dip</item>
        <item name="android:maxWidth">24dip</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyMenuTextStyle" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:attr/actionMenuTextColor</item>
    </style>

    <style name="MyApp.BorderlessButton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlayerTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <!-- API 11 theme customizations can go here. -->
    </style>

